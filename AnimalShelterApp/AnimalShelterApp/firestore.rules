rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read and write their own user profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to create and manage shelters
    match /shelters/{shelterId} {
      allow read, write: if request.auth != null;
      
      // Allow access to animals subcollection within shelters
      match /animals/{animalId} {
        allow read, write: if request.auth != null;
      }
      
      // Allow access to medications subcollection within shelters
      match /medications/{medicationId} {
        allow read, write: if request.auth != null;
      }
      
      // Allow access to schedule subcollection within shelters
      match /schedule/{scheduleId} {
        allow read, write: if request.auth != null;
      }
      
      // Allow access to logs subcollection within shelters
      match /logs/{logId} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
